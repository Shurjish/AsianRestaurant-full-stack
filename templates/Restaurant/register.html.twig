{% extends 'Restaurant/restaurant.html.twig' %}

{% block contenido %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 mt-5">
                <h1 class="mb-4">Register</h1>
                {{ form_start(registerForm, {'attr': {'class': 'form'}}) }}

                <div class="form-group">
                    {{ form_label(registerForm.username, 'Username', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(registerForm.username, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(registerForm.password, 'Password', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(registerForm.password, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(registerForm.name, 'Name', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(registerForm.name, {'attr': {'class': 'form-control'}}) }}
                </div>

                {{ form_end(registerForm) }}
            </div>
        </div>
    </div>
{% endblock %}