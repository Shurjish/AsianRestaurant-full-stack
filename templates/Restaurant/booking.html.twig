{% extends 'Restaurant/restaurant.html.twig' %}

{% block contenido %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1>Booking</h1>
                {{ form_start(bookingForm, {'attr': {'class': 'form'}}) }}

                <div class="form-group">
                    {{ form_label(bookingForm.name, 'Name', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(bookingForm.name, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(bookingForm.people, 'Number of People', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(bookingForm.people, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(bookingForm.phone, 'Phone', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(bookingForm.phone, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(bookingForm.email, 'Email', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(bookingForm.email, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(bookingForm.date, 'Date', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(bookingForm.date, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(bookingForm.hour, 'Hour', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(bookingForm.hour, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(bookingForm.comments, 'Comments', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(bookingForm.comments, {'attr': {'class': 'form-control'}}) }}
                </div>

                {{ form_widget(bookingForm.Reserve, {'attr': {'class': 'btn btn-primary'}}) }}
                {{ form_end(bookingForm) }}
            </div>
        </div>
    </div>
{% endblock %}

